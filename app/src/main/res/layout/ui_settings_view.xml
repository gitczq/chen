<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tv_setting_title"
        style="@style/textview13sp"
        android:padding="5dp"
        android:text="@string/ui_settings_view_text"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/tv_setting_status"
        style="@style/textview13sp"
        android:layout_below="@+id/tv_setting_title"
        android:paddingLeft="5dp"
        android:text="@string/ui_settings_view_status_on"
        android:textColor="@color/ui_settings_view_textcolor_gray"/>

    <ToggleButton
        android:id="@+id/toggle_setting_status"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/toggle_btn_blue_selector"
        android:textOff=""
        android:textOn=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_list_color"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
